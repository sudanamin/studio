<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:gravity="left"
     >



     <RelativeLayout
         android:id="@+id/main"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/rounded_corner"

         android:clickable="true"


         >
         <ImageView
             android:id="@+id/mainimag"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
                          android:src="@drawable/img_def" />

     </RelativeLayout>
     <RelativeLayout
         android:id="@+id/maintxt"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/rounded_corner"

         android:clickable="true"


         >

         <TextView
             android:id="@+id/txtframe"
             android:layout_width="280dp"
             android:layout_height="wrap_content"
             android:text="Escriba el mensaje asdf adf asdf asdf asdf asdf "
             android:textSize="22sp"
             android:paddingLeft="2dp"
             android:lines="1"
             android:ellipsize="end"
             android:layout_marginLeft="5dp"
             android:layout_centerVertical="true"


             >


         </TextView>

         <Button
             android:id="@+id/btnAddTitle"
             android:layout_gravity="center"
             android:layout_width="92dp"
             android:layout_height="50dp"
             android:text="VIEW SALE"
             android:textSize="14sp"
             android:background="@drawable/orange"
             android:layout_centerVertical="true"
             android:paddingRight="10dp"
             android:paddingLeft="10dp"

             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dp"
             android:textColor="@color/white"

             />

     </RelativeLayout>

     <LinearLayout
         android:id="@+id/linear"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal"
         android:gravity="center"
         >
         <android.support.v7.widget.RecyclerView android:id="@+id/recyclerview"
             xmlns:android="http://schemas.android.com/apk/res/android"

             android:layout_width="380dp"
             android:layout_height="380dp"
          />



 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        >

     <TextView
         android:id="@+id/most"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="false"
         android:layout_marginStart="1dp"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="20dp"
         android:gravity="left"
         android:text="Most Popular"
         android:textStyle="bold"
         android:textSize="20sp" />
 
    <HorizontalScrollView
        android:id="@+id/alsohortizon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"

        android:gravity="left"
        android:layout_marginLeft="0dp" >

        <LinearLayout
             android:id="@+id/also"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>
 </LinearLayout>
 </LinearLayout>
</ScrollView>